{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ESNext",
    "module": "CommonJS",
    "types": [
      "node"
    ],
    
    "allowJs": true,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./source/*",
        "./backend/core/*"
      ],
      "@mapa-cultural/database": [
        "./backend/database"
      ],
      "@/public/*": [
        "./public/*"
      ],
    },
    "isolatedModules": true,
    "incremental": true
  },
  "include": [
    "backend/core/**/*",
    "backend/database/**/*",
    "source/**/*",
    "pages"
  ],
  "exclude": [
    "node_modules/**/*",
    "babel.config.ts",
    "metro.config.ts",
    "jest.config.js",
    "next.config.ts",
    "source/components/atom/date-picker/react-date-picker/**/*",
  ],
  "extends": "expo/tsconfig.base",
  "rules": [
    {
      "react/prop-types": 0
    }
  ]
}
