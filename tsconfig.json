{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ES2015",
    "module": "esnext",
    "types": [
      "node"
    ],
    "allowJs": true,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "isolatedModules": true,
    "incremental": true
  },
  "include": [
    "src/**/*",
    "pages"
  ],
  "exclude": [
    "node_modules",
    "babel.config.ts",
    "metro.config.ts",
    "jest.config.js",
    "next.config.ts",
    "src/components/atom/date-picker/react-date-picker/**/*",
  ],
  "extends": "expo/tsconfig.base",
  "rules": [
    {
      "react/prop-types": 0
    }
  ]
}
